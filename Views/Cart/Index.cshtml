@model IEnumerable<ABC_Retailer.Models.Cart>

@{
    ViewData["Title"] = "Shopping Cart";
    var cartTotal = Model?.Sum(item => item.Quantity * item.UnitPrice) ?? 0;
}

<div class="container mt-4">
    <h2 class="mb-4">
        <i class="bi bi-cart-fill"></i> Shopping Cart
    </h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Unit Price</th>
                                <th>Quantity</th>
                                <th>Subtotal</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@item.ProductName</strong>
                                    </td>
                                    <td>R @item.UnitPrice.ToString("N2")</td>
                                    <td>@item.Quantity</td>
                                    <td>R @((item.Quantity * item.UnitPrice).ToString("N2"))</td>
                                    <td>
                                        <form asp-action="RemoveFromCart" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="cartItemId" value="@item.Id" />
                                            <button type="submit" class="btn btn-sm btn-danger"
                                                    onclick="return confirm('Remove this item from cart?');">
                                                <i class="bi bi-trash"></i> Remove
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-light">
                                <td colspan="3" class="text-end"><strong>Total:</strong></td>
                                <td colspan="2"><strong>R @cartTotal.ToString("N2")</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <div>
                        <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Continue Shopping
                        </a>
                        <form asp-action="ClearCart" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-danger"
                                    onclick="return confirm('Clear entire cart?');">
                                <i class="bi bi-trash"></i> Clear Cart
                            </button>
                        </form>
                    </div>
                    <div>
                        <a href="@Url.Action("Checkout", "Cart")" class="btn btn-success btn-lg">
                            <i class="bi bi-credit-card"></i> Proceed to Checkout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-cart-x" style="font-size: 5rem; color: #ddd;"></i>
                <h4 class="mt-3">Your cart is empty</h4>
                <p class="text-muted">Start adding products to your cart!</p>
                <a href="@Url.Action("Index", "Product")" class="btn btn-primary mt-3">
                    <i class="bi bi-bag"></i> Browse Products
                </a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
} 