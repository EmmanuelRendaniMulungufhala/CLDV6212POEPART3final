@model ABC_Retailer.Models.Product
@{
    ViewData["Title"] = "Add Product";
}

<h2>Add Product</h2>
<hr />

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post" enctype="multipart/form-data" id="productForm">
            @Html.AntiForgeryToken()

            <!-- Hidden fields for Azure Table keys -->
            <input type="hidden" asp-for="PartitionKey" value="PRODUCT" />
            <input type="hidden" asp-for="RowKey" value="@Guid.NewGuid().ToString()" />

            <div class="mb-3">
                <label asp-for="ProductName" class="form-label">Product Name *</label>
                <input asp-for="ProductName" class="form-control" placeholder="Enter product name" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter product description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Price" class="form-label">Price *</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="0.00" />
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="StockAvailable" class="form-label">Stock Available *</label>
                <input asp-for="StockAvailable" type="number" class="form-control" placeholder="Enter stock quantity" />
                <span asp-validation-for="StockAvailable" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="imageFile" class="form-label">Product Image</label>
                <input type="file" name="imageFile" class="form-control" accept="image/*" />
                <div class="form-text">Optional: Upload a product image (JPG, PNG, GIF)</div>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Save Product
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Clear success message when form is submitted
        document.getElementById('productForm').addEventListener('submit', function() {
            const successAlert = document.querySelector('.alert-success');
            if (successAlert) {
                successAlert.remove();
            }
        });
    </script>
}