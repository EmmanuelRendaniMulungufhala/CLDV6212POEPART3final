@model IEnumerable<ABC_Retailer.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-bag-fill"></i> Products</h2>

        @if (User.IsInRole("Admin"))
        {
            <a href="@Url.Action("Create", "Product")" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Product
            </a>
        }
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Search Bar -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Search" method="get" class="row g-3">
                <div class="col-md-10">
                    <input type="text" name="query" class="form-control"
                           placeholder="Search products..."
                           value="@ViewBag.SearchQuery" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Search
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@product.ProductName</h5>
                            <p class="card-text text-muted">@product.Description</p>

                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h4 class="text-primary mb-0">R @product.Price.ToString("N2")</h4>
                                    <span class="badge bg-@(product.StockAvailable > 10 ? "success" : product.StockAvailable > 0 ? "warning" : "danger")">
                                        Stock: @product.StockAvailable
                                    </span>
                                </div>

                                <div class="d-flex gap-2">
                                    <a href="@Url.Action("Details", "Product", new { id = product.RowKey })"
                                       class="btn btn-outline-primary btn-sm flex-fill">
                                        <i class="bi bi-info-circle"></i> Details
                                    </a>

                                    @if (User.IsInRole("Customer") && product.StockAvailable > 0)
                                    {
                                        <form asp-controller="Cart" asp-action="AddToCart" method="post" class="flex-fill">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="productId" value="@product.RowKey" />
                                            <input type="hidden" name="quantity" value="1" />
                                            <button type="submit" class="btn btn-success btn-sm w-100">
                                                <i class="bi bi-cart-plus"></i> Add to Cart
                                            </button>
                                        </form>
                                    }

                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a href="@Url.Action("Edit", "Product", new { id = product.RowKey })"
                                           class="btn btn-warning btn-sm">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form asp-action="Delete" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@product.RowKey" />
                                            <button type="submit" class="btn btn-danger btn-sm"
                                                    onclick="return confirm('Delete this product?');">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-inbox" style="font-size: 3rem;"></i>
            <h4 class="mt-3">No products found</h4>
            @if (User.IsInRole("Admin"))
            {
                <a href="@Url.Action("Create", "Product")" class="btn btn-primary mt-2">
                    <i class="bi bi-plus-circle"></i> Add First Product
                </a>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}