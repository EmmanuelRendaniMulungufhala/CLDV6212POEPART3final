@model ABC_Retailer.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h2>Delete Product</h2>

<h3>Are you sure you want to delete this product?</h3>

<div>
    <h4>@Model.ProductName</h4>
    <p>@Model.Description</p>
    <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
    <p><strong>Stock:</strong> @Model.StockAvailable</p>
    <!-- Removed ImageUrl display since it's no longer stored -->
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="RowKey" />
    <input type="hidden" asp-for="PartitionKey" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
