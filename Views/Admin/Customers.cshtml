@model IEnumerable<ABC_Retailer.Models.Customer>

@{
    ViewData["Title"] = "Manage Customers";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Manage Customers</h2>
        <div>
            <a href="@Url.Action("CreateCustomer", "Admin")" class="btn btn-primary me-2">
                <i class="bi bi-plus-circle"></i> Add New Customer
            </a>
            <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Customer ID</th>
                            <th>Name</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Shipping Address</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var customer in Model)
                            {
                                <tr>
                                    <td>@customer.RowKey</td>
                                    <td>@customer.Name @customer.Surname</td>
                                    <td>@customer.Username</td>
                                    <td>@customer.Email</td>
                                    <td>@customer.ShippingAddress</td>
                                    <td>
                                        <span class="badge bg-@(customer.IsActive ? "success" : "danger")">
                                            @(customer.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("EditCustomer", "Admin", new { id = customer.RowKey })"
                                           class="btn btn-sm btn-warning">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <form method="post" asp-action="DeleteCustomer" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@customer.RowKey" />
                                            <button type="submit" class="btn btn-sm btn-danger"
                                                    onclick="return confirm('Are you sure you want to delete this customer?');">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center">No customers found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}